<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gmail.dianaupham.swirlytap.swirlytap" >

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.gmail.dianaupham.swirlytap.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gmail.dianaupham.swirlytap.SinglePlayer"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_single_player"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.gmail.dianaupham.swirlytap.levelPlay"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_single_player"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.gmail.dianaupham.swirlytap.DatabaseMainActivity"
            android:label="DatabaseActiviy"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.gmail.dianaupham.swirlytap.PlayAgain"
            android:label="@string/title_activity_single_player"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.gmail.dianaupham.swirlytap.Register"
            android:label="Register"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.gmail.dianaupham.swirlytap.Login"
            android:label="Login"
            android:screenOrientation="portrait" >
        </activity>

        <meta-data
            android:name="com.crashlytics.ApiKey"
            android:value="3c3dfc16c40dbf849a9915c2ece897ac19b071d6" />

        <activity
            android:name="com.gmail.dianaupham.swirlytap.HighScoreActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_high_score"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.gmail.dianaupham.swirlytap.LoginScreen"
            android:label="StartScreen"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.gmail.dianaupham.swirlytap.Profile"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_profile"
            android:theme="@style/FullscreenTheme" >
        </activity>
    </application>

</manifest>
