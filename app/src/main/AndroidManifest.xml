<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.spencer.swirlytap" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:largeHeap="true"
        android:screenOrientation="portrait">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".singlePlayer"
            android:label="@string/title_activity_single_player"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.SINGLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SinglePlayer"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_single_player_ni"
            android:theme="@style/FullscreenTheme"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".PlayAgain"
            android:label="@string/title_activity_single_player"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
