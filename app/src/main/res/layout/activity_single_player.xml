<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.spencer.swirlytap.singlePlayer"
    android:id="@+id/singlePlayer"
    android:orientation="vertical"
    android:background="@drawable/oneplayer_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/countdown"
        android:text="Time: 60"
        android:autoText="false"
        android:textColor="#ff000000"
        android:textSize="16sp"
        android:textIsSelectable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Score"
        android:id="@+id/totalScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:textSize="50sp"
        android:textColor="#ff000000"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/countdown" />

    <TableLayout
        android:id="@+id/tableForButtons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="."
        android:layout_below="@+id/countdown"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="49sp" >
        </TableLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pause_button"
        android:src="@drawable/pause"
        android:scaleType="fitXY"
        android:background="#00ffffff"
        android:clickable="true"
        android:cropToPadding="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/countdown"
        android:layout_toStartOf="@+id/totalScore"
        android:layout_alignBottom="@+id/totalScore"
        android:layout_alignRight="@+id/countdown"
        android:layout_alignEnd="@+id/countdown" />

</RelativeLayout>
