<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.spencer.swirlytap.singlePlayer"
    android:id="@+id/singlePlayer"
    android:orientation="vertical"
    android:background="@drawable/oneplayer_bg">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#6f000000">

                <TextView
                    android:layout_width="80sp"
                    android:layout_height="wrap_content"
                    android:text="@string/time"
                    android:id="@+id/textView"
                    android:textColor="#ff3ad7ff"
                    android:textSize="24sp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:gravity="center|top" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/countdown"
                    android:text="@string/num_sixty"
                    android:autoText="false"
                    android:textColor="#ff3ad7ff"
                    android:textSize="30sp"
                    android:textIsSelectable="true"
                    android:gravity="center|top"
                    android:layout_below="@+id/textView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignRight="@+id/textView"
                    android:layout_alignEnd="@+id/textView" />

                <TextView
                    android:text="@string/initial_Score"
                    android:id="@+id/totalScore"
                    android:layout_width="130sp"
                    android:layout_height="78dp"
                    android:scaleType="center"
                    android:textSize="50sp"
                    android:textColor="#ff4ed7e5"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:layout_alignBottom="@+id/countdown"
                    android:background="@drawable/score_frame" />

                <ImageButton
                    android:layout_width="88sp"
                    android:layout_height="63sp"
                    android:id="@+id/pause_button"
                    android:src="@drawable/pause"
                    android:scaleType="fitXY"
                    android:background="#00ffffff"
                    android:clickable="true"
                    android:cropToPadding="false"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5sp"
                android:id="@+id/imageView3"
                android:background="#ff000000" />

            <TableLayout
                android:id="@+id/tableForButtons"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </TableLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
