<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.spencer.swirlytap.PauseMenu"
    android:orientation="vertical"
    android:background="@drawable/tw__transparent"
    android:clickable="true"
    android:id="@+id/pause_layout">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Paused"
                    android:src="@drawable/paused"
                    android:contentDescription="Paused"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="#00ffffff"
                    android:scaleType="fitCenter"
                    android:onClick="Continue"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
