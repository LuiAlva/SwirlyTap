<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.gmail.dianaupham.swirlytap.mySQLActivity"
    android:id="@+id/LogIn_Layout">


    <Button
        android:layout_width="170sp"
        android:layout_height="65sp"
        android:text="@string/LogIn"
        android:id="@+id/LogIn"
        android:layout_alignParentTop="true"
        android:layout_marginTop="59dp"
        android:textSize="35sp"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:enabled="true" />

    <Button
        android:layout_width="170sp"
        android:layout_height="65sp"
        android:text="@string/Confirm"
        android:id="@+id/Register"
        android:layout_below="@+id/LogIn"
        android:layout_alignLeft="@+id/LogIn"
        android:layout_alignStart="@+id/LogIn"
        android:layout_alignRight="@+id/LogIn"
        android:layout_alignEnd="@+id/LogIn"
        android:textSize="30sp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:enabled="true" />

    <Button
        android:layout_width="170sp"
        android:layout_height="65sp"
        android:text="@string/UpdateUserInfo"
        android:id="@+id/UpDate"
        android:layout_below="@+id/Register"
        android:layout_alignLeft="@+id/Register"
        android:layout_alignStart="@+id/Register"
        android:textSize="30sp"
        android:clickable="true"
        android:enabled="true" />

    <Button
        android:layout_width="170sp"
        android:layout_height="65sp"
        android:text="@string/DeleteUserInfo"
        android:id="@+id/Delete"
        android:layout_below="@+id/UpDate"
        android:layout_alignLeft="@+id/UpDate"
        android:layout_alignStart="@+id/UpDate"
        android:textSize="23sp"
        android:clickable="true"
        android:enabled="true"
        android:focusableInTouchMode="true"
        android:focusable="true" />


</RelativeLayout>
