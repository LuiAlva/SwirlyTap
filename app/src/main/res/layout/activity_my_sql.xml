<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.gmail.dianaupham.swirlytap.DatabaseMainActivity"
    android:id="@+id/LogIn_Layout"
    android:background="@color/teal">


    <Button
        android:layout_width="170sp"
        android:layout_height="65sp"
        android:text="@string/UpdateUserInfo"
        android:id="@+id/UpDate"
        android:textSize="30sp"
        android:clickable="true"
        android:enabled="true"
        android:background="@drawable/button_bg"
        android:textColor="#ffffffff"
        android:layout_above="@+id/Delete"
        android:layout_alignLeft="@+id/Delete"
        android:layout_alignStart="@+id/Delete" />

    <Button
        android:layout_width="170sp"
        android:layout_height="65sp"
        android:text="@string/DeleteUserInfo"
        android:id="@+id/Delete"
        android:textSize="23sp"
        android:clickable="true"
        android:enabled="true"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:background="@drawable/button_bg"
        android:textColor="#ffffffff"
        android:layout_above="@+id/Users"
        android:layout_alignLeft="@+id/Users"
        android:layout_alignStart="@+id/Users" />

    <Button
        android:layout_width="170sp"
        android:layout_height="65sp"
        android:text="@string/users1"
        android:id="@+id/Users"
        android:textSize="23sp"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:clickable="true"
        android:enabled="true"
        android:background="@drawable/button_bg"
        android:textColor="#ffffffff"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="170sp"
        android:layout_height="65sp"
        android:text="@string/play"
        android:id="@+id/starts_game"
        android:background="@drawable/button_bg"
        android:textColor="#ffffffff"
        android:layout_below="@+id/Users"
        android:layout_alignLeft="@+id/Users"
        android:layout_alignStart="@+id/Users"
        android:layout_alignRight="@+id/Users"
        android:layout_alignEnd="@+id/Users"
        android:textSize="23sp" />


</RelativeLayout>
