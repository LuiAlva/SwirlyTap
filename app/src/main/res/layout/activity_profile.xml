<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="16dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#0099cc"
    tools:context="com.gmail.dianaupham.swirlytap.Profile">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/tableRow2">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageView
                    android:src="@drawable/swirlytap_title"
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/TitleImage" />

            </RelativeLayout>

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tableRow2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/tableRowTitle">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ProfileTitle"
                    android:id="@+id/ProfileTitle"
                    android:textStyle="bold"
                    android:textSize="45sp"
                    android:textColor="@color/midnight_blue"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"/>

            </RelativeLayout>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tableRowTitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/tableRow3"
            android:paddingLeft="20dp"
            android:paddingRight="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username:  "
                android:id="@+id/UserNameProfile"
                android:textStyle="bold"
                android:textSize="26sp"
                android:layout_below="@+id/ProfileTitle"
                android:layout_column="0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/UserName"
                android:id="@+id/UserNameBox"
                android:textStyle="bold"
                android:textSize="30sp"
                android:layout_below="@+id/UserNameProfile"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_column="1"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tableRow3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/tableRow4"
            android:paddingLeft="20dp"
            android:paddingRight="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High Score:  "
                android:id="@+id/textView21"
                android:textStyle="bold"
                android:textSize="26sp"
                android:layout_column="0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/z000"
                android:id="@+id/HighScoreBox"
                android:textStyle="bold"
                android:textSize="30sp"
                android:layout_below="@+id/textView21"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_column="1"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/GoodSwirlTotalTable"
            android:layout_below="@+id/tableRow4"
            android:paddingLeft="20dp"
            android:paddingRight="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/GoodSwirlTotalDescription"
                android:text="Total Green Swirls:  "
                android:textIsSelectable="false"
                android:layout_column="0"
                android:textStyle="bold"
                android:textSize="26sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/z0000"
                android:id="@+id/GoodSwirlTotalBox"
                android:layout_column="1"
                android:textStyle="bold"
                android:textSize="26sp"/>

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tableRow4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:id="@+id/tableRow5">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/SignOut"
                android:id="@+id/sign_out"
                android:textStyle="bold"
                android:textColor="#ffffffff"
                android:textSize="20sp"
                android:background="@drawable/button_bg"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10sp"/>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tableRow5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/back"
                android:id="@+id/Back"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ffffffff"
                android:background="@drawable/button_bg"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10sp"/>
        </TableRow>
    </RelativeLayout>

</RelativeLayout>
